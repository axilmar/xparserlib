expr 
    : add
    ;

add 
    : add '+' mul
    | add '-' mul
    | mul
    ;

mul 
    : mul '*' val
    | mul '/' val
    | val
    ;

val 
    : '+' unsigned-val
    | '-' unsigned-val
    | unsigned-val
    ;

unsigned-val
    : number
    | '(' expr ')'
    ;

number
    : digit+ ['.' [digit+]]
    | '.' digit+
    ;

digit 
    : /[0-9]/
    ;
